---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Caveat&family=Shadows+Into+Light&display=block" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Caveat&family=Indie+Flower&family=Shadows+Into+Light&display=block" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body>
		<!-- tailwind classes for animated opacity appear -->
		<main class="h-screen overflow-y-scroll snap-y snap-mandatory animate-appear">
			<slot />
		</main>
	</body>
</html>
