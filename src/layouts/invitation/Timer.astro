<div class="flex" x-data=`
{
  expiry: (new Date('12/14/2024 12:00 AM')).getTime(),
  remaining: null,
  init() {
    this.setRemaining()
    setInterval(() => {
      this.setRemaining();
    }, 1000);
  },
  setRemaining() {
    const diff = this.expiry - new Date().getTime();
    this.remaining =  parseInt(diff / 1000);
  },
  days() {
    return {
      value:this.remaining / 86400,
      remaining:this.remaining % 86400
    };
  },
  hours() {
    return {
      value:this.days().remaining / 3600,
      remaining:this.days().remaining % 3600
    };
  },
  minutes() {
    return {
      value:this.hours().remaining / 60,
      remaining:this.hours().remaining % 60
    };
  },
  seconds() {
    return {
      value:this.minutes().remaining,
    };
  },
  format(value) {
    return parseInt(value)
  },
  time(){
    return {
      days:this.format(this.days().value),
      hours:this.format(this.hours().value),
      minutes:this.format(this.minutes().value),
      seconds:this.format(this.seconds().value),
    }
  },
}` x-init="init();">
  <div class="flex flex-col justify-center items-center px-3">
    <p class="text-xl font-sans" x-text="time().days"></p>
    <p class="text-xl font-sans">DIAS</p>
  </div>
  <div class="flex flex-col justify-center items-center px-3">
    <p class="text-xl font-sans" x-text="time().hours"></p>
    <p class="text-xl font-sans">HRS</p>
  </div>
  <div class="flex flex-col justify-center items-center px-3">
    <p class="text-xl font-sans" x-text="time().minutes"></p>
    <p class="text-xl font-sans">MIN</p>
  </div>
  <div class="flex flex-col justify-center items-center px-3">
    <p class="text-xl font-sans" x-text="time().seconds"></p>
    <p class="text-xl font-sans">SEG</p>
  </div>
</div>

